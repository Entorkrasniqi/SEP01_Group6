pipeline {
    agent any
    tools {
        maven 'Maven3'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'maven_test', url: 'https://github.com/Entorkrasniqi/SEP01_Group6.git'
            }
        }
        stage('Verify Source Files') {
            steps {
                bat 'dir src\\test\\java\\com\\group6\\digitalnotes\\view'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Clean Coverage Artifacts') {
            steps {
                bat 'del /Q target\\jacoco.exec'
                bat 'rmdir /S /Q target\\jacoco-report'
            }
        }
        stage('Code Coverage') {
            steps {
                bat 'mvn jacoco:report'
            }
        }
        stage('Publish Test Results') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }
        stage('Publish Coverage Report') {
            steps {
                jacoco()
            }
        }
    }
}
