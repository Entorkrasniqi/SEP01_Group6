pipeline {
    agent any
    tools {
        maven 'Maven3'
    }

    stages {
        stage('ğŸ“¥ Checkout Code') {
            steps {
                git branch: 'maven_test', url: 'https://github.com/Entorkrasniqi/SEP01_Group6.git', changelog: false, poll: false
            }
        }

        stage('ğŸ”§ Build Project') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('ğŸ§ª Run Tests & Archive Results') {
            steps {
                bat 'mvn test'
                bat 'dir /s target\\surefire-reports'
                junit '**/target/surefire-reports/TEST-*.xml'
            }
        }

        stage('ğŸ“Š Generate Coverage Report') {
            steps {
                bat 'mvn jacoco:report'
            }
        }

        stage('ğŸ“ˆ Publish Coverage Report') {
            steps {
                jacoco()
            }
        }

        stage('ğŸ“ Archive Test Files (Debug)') {
            steps {
                archiveArtifacts artifacts: 'target/surefire-reports/*.xml', fingerprint: true
            }
        }
    }
}
