                                <MenuItem onAction="#onSwitchToArabic" text="Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©"/>
                                <MenuItem onAction="#onSwitchToJapanese" text="æ—¥æœ¬èªž"/>
                            </items>
                        </MenuButton>
                    </children>
                </HBox>

                <HBox layoutX="406.0" layoutY="755.0" prefHeight="20.0" prefWidth="319.0">
                    <children>
                        <Label fx:id="statusLabel" alignment="CENTER"
                               prefHeight="15.0" prefWidth="323.0"
                               textAlignment="CENTER" textFill="#00cc66"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </center>

    <right>
        <AnchorPane fx:id="sidebar" prefHeight="800.0" prefWidth="250.0"
                    style="-fx-background-color: #262a31;" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="searchField" layoutX="11.0" layoutY="14.0"
                           prefHeight="40.0" prefWidth="228.0"
                           promptText="Search notes..."/>

                <ListView fx:id="noteList" layoutX="11.0" layoutY="75.0"
                          prefHeight="650.0" prefWidth="228.0"/>

                <Button fx:id="deleteBtn" layoutX="159.0" layoutY="744.0"
                        onAction="#onDelete" prefHeight="28.0" text="Delete"/>
            </children>
        </AnchorPane>
    </right>
</BorderPane>
