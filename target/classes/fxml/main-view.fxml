                          prefHeight="650.0" prefWidth="950.0"
                          AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="75.0"
                          promptText="Write your note here..."/>

                <HBox layoutX="25.0" layoutY="745.0" spacing="10">
                    <children>
                        <Label fx:id="timerLabel" onMouseClicked="#onTimerClicked"
                               prefHeight="28.0" styleClass="label-button" text="15:00">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Label>

                        <Button fx:id="newNoteBtn" onAction="#onNewNote" prefHeight="28.0" text="New"/>
                        <Button fx:id="toggleSidebarBtn" onAction="#onToggleSidebar" prefHeight="28.0" text="Notes"/>
                        <Button fx:id="logoutBtn" onAction="#onLogout" prefHeight="28.0" text="Logout"/>

                        <MenuButton fx:id="languageMenuBtn" prefHeight="28.0" prefWidth="78.0"
                                    styleClass="menu-button-minimal" text="ðŸŒ" textFill="WHITE">
