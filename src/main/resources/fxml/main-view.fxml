<BorderPane fx:id="rootPane" prefHeight="800.0" prefWidth="1000.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group6.digitalnotes.controller.MainController">

    <!-- Center: Note editor -->
    <center>
        <AnchorPane fx:id="editorPane" style="-fx-background-color: #262a31;" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="titleField" layoutX="25.0" layoutY="14.0" prefHeight="40.0" prefWidth="950.0" promptText="%placeholder.title" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" />

