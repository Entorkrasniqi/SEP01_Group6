            </children>
        </AnchorPane>
    </center>

    <!-- Right side: Sidebar and controls -->
    <right>
        <AnchorPane fx:id="sidebar" prefHeight="800.0" prefWidth="250.0" style="-fx-background-color: #262a31;" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="searchField" layoutX="11.0" layoutY="14.0" prefHeight="40.0" prefWidth="228.0" promptText="%placeholder.search" />

                <ListView fx:id="noteList" layoutX="11.0" layoutY="75.0" prefHeight="650.0" prefWidth="228.0" />

                <Button fx:id="deleteBtn" layoutX="159.0" layoutY="744.0" mnemonicParsing="false" onAction="#onDelete" prefHeight="28.0" text="%btn.delete" />
