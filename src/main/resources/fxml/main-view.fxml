                <HBox layoutX="25.0" layoutY="745.0" spacing="10">
                    <children>
                        <Label fx:id="timerLabel" onMouseClicked="#onTimerClicked" prefHeight="28.0" styleClass="label-button" text="15:00">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>

                        <Button fx:id="newNoteBtn" mnemonicParsing="false" onAction="#onNewNote" prefHeight="28.0" text="%btn.new" />

                        <Button fx:id="toggleSidebarBtn" mnemonicParsing="false" onAction="#onToggleSidebar" prefHeight="28.0" text="%btn.notes" />

                        <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#onLogout" prefHeight="28.0" text="%btn.logout" />
                    </children>
                </HBox>

                  <MenuButton fx:id="languageMenuBtn" layoutX="416.0" layoutY="741.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="78.0" styleClass="menu-button-minimal" text="ðŸŒ" textFill="WHITE">
